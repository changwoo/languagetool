<!DOCTYPE rules [
    <!ENTITY weekdays "Monday|Tuesday|Wednesday|Thursday|Friday|Saturday|Sunday">
    <!ENTITY abbrevWeekdays "Mon|Mo|Tue|Tu|Wed|We|Thu|Th|Fri|Fr|Sat|Sa|Sun|Su">
    <!ENTITY months "January|February|March|April|May|June|July|August|September|October|November|December">
    <!ENTITY abbrevMonths "Jan|Feb|Mar|Apr|Jun|Jul|Aug|Sep|Sept|Oct|Nov|Dec">
]>

<rules lang="ko" xsi:noNamespaceSchemaLocation="../../../../../../../../../languagetool-core/src/main/resources/org/languagetool/rules/rules.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <category id="CONVENTION" name="관례적 표현" type="style">
      <rule id="우리나라" name="우리나라">
	<pattern>
	  <token>저희</token>
	  <token>나라</token>
	</pattern>
        <message>혹시 <suggestion>우리 나라</suggestion>를 의도하셨나요?</message>
        <short>잘못된 높임법</short>
        <example correction='우리 나라'><marker>저희 나라</marker> 만세.</example>         
      </rule>
    </category>
</rules>
